{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run standard",
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": [
{
    "target": "site",
    "public": "hosting/site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/FacebookMessenger/**",
        "function": "FacebookMessengerApi"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },

{
    "target": "POM",
    "public": "hosting/POM",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "signin",
        "destination": "/signin.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
],
  "storage": {
    "rules": "storage.rules"
  }
}
